{
  "inputs": [
    {
      "type": "promptString",
      "id": "github_token",
      "description": "Enter your GitHub Personal Access Token",
      "password": true
    },
    {
      "id": "main_directory",
      "type": "promptString",
      "description": "Enter the path to the main directory",
      "default": "/home/yoichi/develop/ai/edm/src/relational_ed"
    }
  ],
  "servers": {
    "git": {
      "command": "/home/yoichi/.nvm/versions/node/v22.16.0/bin/node",
      "args": [
        "/home/yoichi/.nvm/versions/node/v22.16.0/lib/node_modules/@cyanheads/git-mcp-server/dist/index.js"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${input:github_token}"
      }
    },
    "memory": {
      "command": "/home/yoichi/.nvm/versions/node/v22.16.0/bin/node",
      "args": [
        "/home/yoichi/.nvm/versions/node/v22.16.0/lib/node_modules/@modelcontextprotocol/server-memory/dist/index.js"
      ]
    },
    "serena": {
			"command": "uvx",
			"args": [
				"--from",
				"git+https://github.com/oraios/serena",
				"serena",
				"start-mcp-server",
				"--context",
				"ide-assistant"
			]
		},
    "filesystem": {
      "command": "/home/yoichi/.nvm/versions/node/v22.16.0/bin/node",
      "args": [
        "/home/yoichi/.nvm/versions/node/v22.16.0/lib/node_modules/@modelcontextprotocol/server-filesystem/dist/index.js",
        "/home/yoichi/develop/ai/edm/src/relational_ed"
      ]
    },
    "markdownify": {
      "command": "/home/yoichi/.nvm/versions/node/v22.16.0/bin/node",
      "args": [
        "/home/yoichi/tools/mcp-server/markdownify-mcp/dist/index.js"
      ],
      "env": {
        "PATH": "/usr/local/cuda/bin:/home/yoichi/.local/bin:/home/yoichi/.nvm/versions/node/v22.16.0/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
      }
    },
    "fetch": {
      "command": "uvx",
      "args": [
        "mcp-server-fetch"
      ]
    }
  }
}
